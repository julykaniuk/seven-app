        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/end"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/endDateButton"
            android:layout_width="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_today"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:id="@+id/endTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@android:drawable/ic_menu_recent_history"
            android:backgroundTint="@color/black"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/repeat_24" />

            <Button
                android:id="@+id/repeatButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"

                android:text="@string/repeate" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/notifications" />

            <Button
                android:id="@+id/reminderButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="@string/reminder" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/notes_24" />
            <EditText
                android:id="@+id/addTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@drawable/edittext_backround"
                android:fontFamily="@font/poppins"
                android:hint="@string/add_notes"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>