<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:id="@+id/event_widget"
    android:theme="@style/Theme.SevenApp.AppWidgetContainer">

    <!-- Основний контейнер для всього вмісту -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"

        android:id="@+id/widget_container"
        android:orientation="horizontal">

        <!-- Ліва частина: відображення дати -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="Tue"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/month_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="Nov"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <!-- Права частина: відображення інформації про подію -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full House"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="Full House is the Grand prize in any Tambola game played."
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/time_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="6:00 PM"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>